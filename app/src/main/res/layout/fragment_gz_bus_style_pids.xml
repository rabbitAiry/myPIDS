<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_pids_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"/>

    <View
        android:id="@+id/fragment_pids_line_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gz_style_bus_blue"
        app:layout_constraintTop_toTopOf="@id/fragment_pids_guideline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/text_in_line_background"
        tools:text="B3"
        android:textColor="@color/gz_style_bus_orange"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_pids_line_background"
        app:layout_constraintTop_toTopOf="@id/fragment_pids_line_background"
        app:layout_constraintBottom_toBottomOf="@id/fragment_pids_line_background"/>

    <TextView
        android:layout_width="wrap_content"
        style="@style/text_in_line_background"
        tools:text="本车从罗冲围开往东圃客运站"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_pids_line_background"
        app:layout_constraintRight_toRightOf="@id/fragment_pids_line_background"
        app:layout_constraintTop_toTopOf="@id/fragment_pids_line_background"
        app:layout_constraintBottom_toBottomOf="@id/fragment_pids_line_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>