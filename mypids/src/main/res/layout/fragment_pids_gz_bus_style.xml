<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.airy.mypids.pids.gz_bus_style.LineMapLayout
        android:id="@+id/list_stations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"/>
    
    <LinearLayout
        android:id="@+id/layout_station_arrived"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="28dp"
        android:visibility="gone"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_curr_station"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="梅花园"
                android:textColor="@color/light_blue_800"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" 到了"
                android:textColor="@color/golden_600"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_next_station_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="下一站 "
                android:textColor="@color/golden_600"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"/>

            <TextView
                android:id="@+id/text_next_station"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="一五七医院（地铁京溪南方医院）"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_blue_800"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"/>
            
        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@color/light_blue_500">

        <TextView
            android:id="@+id/text_line_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            tools:text="777"
            style="@style/gz_bus_style_bottom_text"
            android:textColor="@color/golden_400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="本车从"
            style="@style/gz_bus_style_bottom_text"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_start_station"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="天河城总站"
            style="@style/gz_bus_style_bottom_text"
            android:textColor="@color/golden_400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="开往"
            style="@style/gz_bus_style_bottom_text"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_end_station"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="珠江新城总站①"
            android:maxLines="1"
            style="@style/gz_bus_style_bottom_text"
            android:textColor="@color/golden_400"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>

</LinearLayout>