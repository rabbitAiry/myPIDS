<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="pids助手"
            android:textColor="?attr/colorOnPrimary"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            android:gravity="bottom"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="@id/toolbar"
            app:layout_constraintRight_toRightOf="@id/toolbar"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/red_sub">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_marginLeft="6dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:text="线路信息"/>

                <TextView
                    style="@style/info_text"
                    android:text="当前线路：36 珠江泳场方向"/>

                <TextView
                    style="@style/info_text"
                    android:text="当前状态：正在行驶"/>

                <TextView
                    style="@style/info_text"
                    android:text="下一站/当前到站：滨江东路"/>

                <TextView
                    style="@style/info_text"
                    android:text="剩余站数：1"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <androidx.cardview.widget.CardView
                style="@style/home_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/home_card_title"
                        android:text="控制"
                        android:layout_marginBottom="6dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/helper_button_next_station"
                            style="@style/home_control_button"
                            android:text="下一站"/>

                        <Button
                            android:id="@+id/helper_button_arrive"
                            style="@style/home_control_button"
                            android:text="到站"/>

                        <Button
                            android:id="@+id/helper_button_run_after_arrive"
                            style="@style/home_control_button"
                            android:text="启动"/>

                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="6dp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/home_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/home_card_title"
                        android:text="连接"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>